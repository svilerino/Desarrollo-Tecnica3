Private Sub llenar(ByRef matriz() As Byte)
Dim x As Byte
For x = 0 To 24
    matriz(x \ 5, x Mod 5) = x
Next x
End Sub
Private Sub mostrar(ByRef matriz() As Byte)
Dim x As Byte
For x = 0 To 24
    txtMatriz(x).Text = Str(matriz(x \ 5, x Mod 5))
Next x
End Sub
Private Sub pasavector(ByRef matriz() As Byte, ByRef vector() As Byte)
Dim x As Byte
For x = 0 To 24
    vector(x) = matriz(x \ 5, x Mod 5)
Next x
End Sub
Private Sub zigzag(ByRef matriz() As Byte, ByRef vector() As Byte)
Dim fila As Byte, columna As Byte, filaaux As Byte
For ffinal = 0 To 4
columna = 0
fila = filaaux
Do: DoEvents
    txtMatriz(fila * 5 + columna).BackColor = vbBlue
    MsgBox matriz(fila, columna)
    fila = fila + 1
    columna = columna + 1
Loop While Not (fila > 4 Or columna > 4)

Next ffinal
End Sub
